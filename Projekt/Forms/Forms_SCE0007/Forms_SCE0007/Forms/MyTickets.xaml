<UserControl x:Class="Forms_SCE0007.Forms.MyTickets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Forms_SCE0007.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<DataGrid Name="dataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Margin="0,0,0,225" >
			<DataGrid.Columns>
				<DataGridTextColumn Header="Id" Binding="{Binding Jizdenka.Id}"/>
				<DataGridTextColumn Header="Cena" Binding="{Binding Jizdenka.Cena}"/>
				<DataGridTextColumn Header="Spoj" Binding="{Binding Jizda.Spoj.Nazev}"/>
				<DataGridTextColumn Header="Spolecnost" Binding="{Binding Jizda.Spoj.Spolecnost.Nazev}"/>
				<DataGridTextColumn Header="Odkud" Binding="{Binding StaniceStart.Nazev}"/>
				<DataGridTextColumn Header="Kam" Binding="{Binding StaniceCil.Nazev}"/>
				<DataGridTextColumn Header="Datum" Binding="{Binding Jizda.DatumStart}"/>
			</DataGrid.Columns>
		</DataGrid>
		<Button x:Name="bt_storno" Content="Zrušit vybranou jízdenku" HorizontalAlignment="Left" Margin="40,250,0,0" VerticalAlignment="Top" Width="150" Height="20" Click="Storno_Click"/>

	</Grid>
</UserControl>
